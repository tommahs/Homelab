# common/lgtm-s3-secret.yaml
apiVersion: v1
kind: Secret
metadata:
  name: lgtm-s3-secret
type: Opaque
stringData:
  S3_ENDPOINT: "minio:9000"
  S3_SECURE_CONNECT: "false"
  S3_ACCESS_KEY: "access-key-value"
  S3_SECRET_KEY: "secret-key-value"
  S3_PATH_STYLE: "true"  # true for ceph, can do false for s3

